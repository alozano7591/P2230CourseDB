    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="ActiveCourse.CourseName">Couse Name</label>
        <input type="text" asp-for="ActiveCourse.CourseName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ActiveCourse.Credits">Credits</label>
        <input type="text" asp-for="ActiveCourse.Credits" class="form-control" />
    </div>

